<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="nightModeSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/nightMode</item>
        <item name="colorSwitchThumbNormal">#ffffff</item>
        <item name="android:colorForeground">#99ffffff</item>

    </style>

    <style name="notificationSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/notification</item>
        <item name="colorSwitchThumbNormal">#ffffff</item>
        <item name="android:colorForeground">#99ffffff</item>

    </style>

    <style name="privateAccountSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/privateAccount</item>
        <item name="colorSwitchThumbNormal">#ffffff</item>
        <item name="android:colorForeground">#99ffffff</item>

    </style>
</resources>